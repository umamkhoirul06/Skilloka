# =============================================================================
# Skilloka Backend - Environment Configuration
# For Docker-based development
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=Skilloka
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Database (PostgreSQL via Docker)
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=skilloka
DB_USERNAME=skilloka
DB_PASSWORD=secret

# -----------------------------------------------------------------------------
# Session & Cache
# -----------------------------------------------------------------------------
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis
CACHE_PREFIX=skilloka_cache_

# -----------------------------------------------------------------------------
# Redis (via Docker)
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Queue
# -----------------------------------------------------------------------------
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=redis

# -----------------------------------------------------------------------------
# Storage (MinIO S3-compatible via Docker)
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=skilloka
AWS_SECRET_ACCESS_KEY=secretkey
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=skilloka-dev
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# -----------------------------------------------------------------------------
# Mail (Mailpit via Docker)
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@skilloka.test"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# Search (MeiliSearch via Docker)
# -----------------------------------------------------------------------------
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterkey

# -----------------------------------------------------------------------------
# Monitoring (Development)
# -----------------------------------------------------------------------------
TELESCOPE_ENABLED=true

# Sentry (optional for local)
SENTRY_LARAVEL_DSN=

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000

# -----------------------------------------------------------------------------
# Third-party (Development Mocks)
# -----------------------------------------------------------------------------
# Firebase (disabled for local)
FIREBASE_CREDENTIALS=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Payment Gateway (Sandbox)
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# -----------------------------------------------------------------------------
# Vite
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
