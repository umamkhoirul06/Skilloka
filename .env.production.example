# =============================================================================
# Skilloka - Production Environment Configuration Template
# Copy to .env.production and fill in actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=Skilloka
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://api.skilloka.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single,stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=skilloka
DB_USERNAME=skilloka
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Connection pooling
DB_POOL_MIN=5
DB_POOL_MAX=50

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# Cache
CACHE_STORE=redis
CACHE_PREFIX=skilloka_cache_

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.skilloka.id
SESSION_SECURE_COOKIE=true

# Queue
QUEUE_CONNECTION=redis
HORIZON_BALANCE=auto
HORIZON_MAX_PROCESSES=20
HORIZON_MEMORY_LIMIT=256

# -----------------------------------------------------------------------------
# Storage (S3/MinIO)
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=s3

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=skilloka-production
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# CDN URL for assets
ASSET_URL=https://cdn.skilloka.id

# -----------------------------------------------------------------------------
# Mail
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@skilloka.id
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun (optional)
MAILGUN_DOMAIN=
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.eu.mailgun.net

# -----------------------------------------------------------------------------
# Search (MeiliSearch)
# -----------------------------------------------------------------------------
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=CHANGE_ME_MEILISEARCH_KEY

# -----------------------------------------------------------------------------
# Monitoring & Error Tracking
# -----------------------------------------------------------------------------
# Sentry
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Telescope (disabled in production)
TELESCOPE_ENABLED=false

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Sanctum
SANCTUM_STATEFUL_DOMAINS=skilloka.id,*.skilloka.id
SESSION_DOMAIN=.skilloka.id

# CORS
CORS_ALLOWED_ORIGINS=https://skilloka.id,https://www.skilloka.id,https://admin.skilloka.id

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Bcrypt rounds (higher = slower but more secure)
BCRYPT_ROUNDS=12

# -----------------------------------------------------------------------------
# Third-party Services
# -----------------------------------------------------------------------------
# Firebase (Push Notifications)
FIREBASE_CREDENTIALS=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Payment Gateway (Midtrans)
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=true

# SMS Provider (for OTP)
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=SKILLOKA

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_REGISTRATION=true
FEATURE_MAINTENANCE_MODE=false
FEATURE_TWO_FACTOR_AUTH=true

# -----------------------------------------------------------------------------
# Docker & Deployment
# -----------------------------------------------------------------------------
DOCKER_REGISTRY=your-registry.io
IMAGE_TAG=latest
